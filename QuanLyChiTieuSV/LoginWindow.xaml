<Window x:Class="QuanLyChiTieuSV.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChiTieuSV"
        mc:Ignorable="d"
        Title="LoginWindow" Height="340" Width="637">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Quản lý chi tiêu" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Tên đăng nhập:"/>
                <TextBox x:Name="txtUsername" Width="200"/>
            </StackPanel>
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Mật khẩu:"/>
                <PasswordBox x:Name="txtPassword" Width="200"/>
            </StackPanel>
            <Button Content="Đăng nhập" Click="btnLogin_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
